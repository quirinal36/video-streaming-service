# ===========================================
# Environment Variables for Docker Compose
# Copy this file to .env and fill in the values
# ===========================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres

# Bunny Stream Configuration
BUNNY_STREAM_API_KEY=your_stream_api_key_here
BUNNY_VIDEO_LIBRARY_ID=your_library_id_here
BUNNY_VIDEO_LIBRARY_HOSTNAME=vz-xxx.b-cdn.net
BUNNY_STREAM_TOKEN_AUTH_KEY=your_token_auth_key_here

# App Configuration (optional for Docker)
APP_URL=http://localhost:3000
NODE_ENV=development
